<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>

  <% if @current_user.present? %>
    <%= link_to 'Home', root_path %>
    <%= link_to 'Flights', flights_path %>

    <% if  @current_user.admin? %>
      <%= link_to 'Reservations', reservations_path %>
      <%= link_to 'Planes', planes_path %>
      <%= link_to 'Users', users_path %>
    <% end %>
  <% end %>

  <% if @current_user.present? %>
    Hi <%= link_to @current_user[:name], user_path(@current_user) %>
    <%= link_to 'Logout', login_path, :method => :delete %>
  <% end %>

</nav>
<%= yield %>
<%= insert_paloma_hook %>

</body>
</html>
