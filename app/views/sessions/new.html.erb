<h1>Welcome to Burning Butterfly Airlines!</h1>
<h2>Please Log In Or Register</h1>



<div id="userSignIn">
<br>
<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag 'username', 'Username:' %>
  <%= text_field_tag 'username' %>
  <%= label_tag 'password', 'Password:' %>
  <%= password_field_tag 'password' %>
  <%= submit_tag 'Login' %>
<% end %>


<p id="signUpLink"><%= link_to 'Sign up', new_user_path %></p>
</div>