<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag 'username', 'Username:' %>
  <%= text_field_tag 'username' %>
  <%= label_tag 'password', 'Password:' %>
  <%= password_field_tag 'password' %>
  <%= submit_tag 'Login' %>
<% end %>